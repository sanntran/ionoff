<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="net.ionoff.center.server.entity.Token" table="tokens">
		
		<id name="id" type="long" column="id">
			<generator class="native" />
		</id>
		
		<property name="name">
			<column name="name" />
		</property>
		
		<property name="value">
			<column name="value" />
		</property>
		
		<property name="expiry">
			<column name="expiry" sql-type="datetime"/>
		</property>		
	
		<many-to-one name="user" class="net.ionoff.center.server.entity.User" fetch="select">
            <column name="user_id" not-null="true" />
        </many-to-one>
		
	</class>
	
</hibernate-mapping>
