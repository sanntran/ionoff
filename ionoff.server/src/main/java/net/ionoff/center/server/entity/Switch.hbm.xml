<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
	<class name="net.ionoff.center.server.entity.Switch" table="switchs">
		
		<id name="id" type="long" column="id">
			<generator class="increment" />
		</id>
		
		<property name="name">
			<column name="name" />
		</property>
		
		<property name="index">
			<column name="index_" />
		</property>
		
		<property name="status" type="java.lang.Boolean">
			<column name="status_" sql-type="bit"/>
		</property>
        
        <many-to-one name="driver" class="net.ionoff.center.server.entity.RelayDriver" fetch="select">
            <column name="driver_id" not-null="true" />
        </many-to-one>
        
        <bag name="sensors" table="sensors" 
				inverse="true" lazy="true" fetch="select"  order-by="index_">
            <key>
                <column name="switch_id" not-null="true" />
            </key>
            <one-to-many class="net.ionoff.center.server.entity.Sensor" />
        </bag>

	</class>
	
</hibernate-mapping>