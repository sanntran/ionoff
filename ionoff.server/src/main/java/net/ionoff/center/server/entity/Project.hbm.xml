<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
	<class name="net.ionoff.center.server.entity.Project" table="projects">
		
		<id name="id" type="long" column="id">
			<generator class="increment" />
		</id>
		
		<property name="name">
			<column name="name" />
		</property>
		
		<property name="address">
			<column name="address" />
		</property>
		
		<bag name="zones" table="zones"
				inverse="true" lazy="true" fetch="select" order-by="order_">
            <key>
                <column name="project_id" not-null="true" />
            </key>
            <one-to-many class="net.ionoff.center.server.entity.Zone" />
        </bag>

		<bag name="areas" table="areas"
				inverse="true" lazy="true" fetch="select" order-by="order_">
            <key>
                <column name="project_id" not-null="true" />
            </key>
            <one-to-many class="net.ionoff.center.server.entity.Area" />
        </bag>
        
		<set name="modes" table="modes" 
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="project_id" not-null="true" />
            </key>
            <one-to-many class="net.ionoff.center.server.entity.Mode" />
        </set>
        
        <set name="users" table="users_projects" 
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="project_id" not-null="true" />
            </key>
            <one-to-many class="net.ionoff.center.server.entity.UserProject" />
        </set>
                
		<set name="sensors" table="sensors" 
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="project_id" not-null="true" />
            </key>
            <one-to-many class="net.ionoff.center.server.entity.Sensor" />
        </set>
        
		<set name="relayDrivers" table="relayDrivers" 
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="project_id" not-null="true" />
            </key>
            <one-to-many class="net.ionoff.center.server.entity.RelayDriver" />
        </set>
		
	</class>
	
</hibernate-mapping>