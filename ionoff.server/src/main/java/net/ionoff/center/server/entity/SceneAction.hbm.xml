<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
	<class name="net.ionoff.center.server.entity.SceneAction" table="scenes_actions" discriminator-value="SceneAction">
		
		<id name="id" type="long" column="id">
			<generator class="increment" />
		</id>
		
		<discriminator column="type_" type="string"> </discriminator>
		
		<property name="action">
			<column name="action_" />
		</property>
		
		<many-to-one name="sceneDevice" class="net.ionoff.center.server.entity.SceneDevice" fetch="select">
            <column name="scenedevice_id" not-null="true" />
        </many-to-one>
        
		<subclass name="net.ionoff.center.server.entity.ScenePlayerAction"
			discriminator-value="ScenePlayerAction">
            
		     <property name="volume">
				<column name="volume" />
			</property>
			
			<property name="album">
				<column name="album" />
			</property>
			
			<property name="albumType">
				<column name="album_type" />
			</property>
			
			<many-to-one name="player" class="net.ionoff.center.server.entity.Player" fetch="select">
            	<column name="player_id" not-null="false" />
        	</many-to-one>
		</subclass>

		<subclass name="net.ionoff.center.server.entity.SceneRelayAction"
			discriminator-value="SceneRelayAction">
			
			<many-to-one name="relay" class="net.ionoff.center.server.entity.Relay" fetch="select">
            	<column name="relay_id" not-null="false" />
        	</many-to-one>
        	
		</subclass>
		
	</class>
	
</hibernate-mapping>