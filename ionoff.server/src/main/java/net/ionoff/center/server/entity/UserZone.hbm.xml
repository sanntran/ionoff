<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<class name="net.ionoff.center.server.entity.UserZone" table="users_zones">
		
		<cache usage="read-write"/>
		
		<id name="id" type="long" column="id" >
			<generator class="increment" />
		</id>
		
	    <property name="role" type="java.lang.Boolean">
			<column name="role" sql-type="bit"/>
		</property>
		
	    <many-to-one name="user" class="net.ionoff.center.server.entity.User" fetch="select">
            <column name="user_id" not-null="true" />
        </many-to-one>
        
		<many-to-one name="zone" class="net.ionoff.center.server.entity.Zone" fetch="select">
            <column name="zone_id" not-null="true" />
        </many-to-one>
        
        <many-to-one name="project" class="net.ionoff.center.server.entity.Project" fetch="select">
            <column name="project_id" not-null="true" />
        </many-to-one>
	</class>
	
</hibernate-mapping>