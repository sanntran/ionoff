<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
	<class name="net.ionoff.center.server.entity.Sensor" table="sensors">
		
		<cache usage="read-write"/>
		
		<id name="id" type="long" column="id">
			<generator class="increment" />
		</id>
		
		<property name="name">
			<column name="name" />
		</property>
		
		<property name="unit">
			<column name="unit" />
		</property>
		
		<property name="type">
			<column name="type_" />
		</property>
		
		<many-to-one name="zone" class="net.ionoff.center.server.entity.Zone" fetch="select">
            <column name="zone_id" not-null="true" />
        </many-to-one>
		
		<many-to-one name="device" class="net.ionoff.center.server.entity.Device" fetch="select">
            <column name="device_id" not-null="true" />
        </many-to-one>
		
		<many-to-one name="project" class="net.ionoff.center.server.entity.Project" fetch="select">
            <column name="project_id" not-null="true" />
        </many-to-one>
        
        <many-to-one name="zwitch" class="net.ionoff.center.server.entity.Switch" fetch="select">
            <column name="switch_id" not-null="true" />
        </many-to-one>

		<one-to-one name="status"
			class="net.ionoff.center.server.entity.SensorStatus"></one-to-one>
		
	</class>
	
</hibernate-mapping>