<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client">

	<ui:style>
		.btnIcon {
			font-size: 46px !important;
			position: absolute;
			bottom: 12px;
			left: 12px;
			padding: 0px !important;
		}
		.icon {
			bottom: 15px !important;
    		left: 4px !important;
		}
		.sliderWrapper {
			position: absolute;
			bottom: 0px;
			left: 0px;
			height: 1px;
			background-color: #677b8b;
			right: 0px;
		}
		.sliderPlayed {
			height: 2px;
		}
		.playerBtn {
		    width: 50px !important;
		    text-align: center;
		    height: 45px;
			line-height: 45px;
			font-size: 3.5rem !important;
			float: right;
			padding: 0px !important;
		}
		.menuIcon {
			position: absolute;
			right: 0px;
		}
		.menuItem {
			color: #f2f38a !important;
    		font-size: 13px !important;
		}
		.btnGroup {
			position: absolute;
		    bottom: 10px;
		    right: 10px!important;
    		width: calc(100% - 20px) !important;
		}
	</ui:style>
	
	<g:HTMLPanel ui:field="root">
		<m:MaterialColumn grid="l3 m3 s6">
				<m:MaterialCard addStyleNames="device player" backgroundColor="BLUE_GREY_DARKEN_2">
					<m:MaterialCardContent textColor="YELLOW_LIGHTEN_5" >
						<m:MaterialRow marginBottom="0">
							<m:MaterialPanel ui:field="playerCard" grid="s9"  waves="LIGHT">
								<m:MaterialLabel ui:field="lblName" addStyleNames="name" text="-" fontSize="16px"/>
								<m:MaterialLabel ui:field="lblZone" addStyleNames="zone" text="-" textColor="GREY_LIGHTEN_2"/>
							</m:MaterialPanel>
							<m:MaterialPanel grid="s12" addStyleNames="{style.btnGroup}">
								<m:MaterialIcon ui:field="btnNext" addStyleNames="{style.playerBtn}" waves="LIGHT" iconType="SKIP_NEXT" circle="true" iconSize="MEDIUM"/>
								<m:MaterialIcon ui:field="btnStop" addStyleNames="{style.playerBtn}" waves="LIGHT" iconType="STOP" circle="true" iconSize="MEDIUM"/>
							</m:MaterialPanel>
							<m:MaterialPanel addStyleNames="{style.sliderWrapper}">
								<m:MaterialLabel ui:field="lblPlayed" addStyleNames="{style.sliderPlayed}" backgroundColor="PINK_ACCENT_4"/>
							</m:MaterialPanel>
							<m:MaterialIcon ui:field="btnIcon" circle="true" addStyleNames="{style.btnIcon}" waves="LIGHT" iconType="PLAY_CIRCLE_FILLED" float="LEFT"/>
							<m:MaterialLabel ui:field="lblTime" addStyleNames="time" text="" textColor="GREY_LIGHTEN_1" float="LEFT"/>
						</m:MaterialRow>
					</m:MaterialCardContent>
				</m:MaterialCard>

			</m:MaterialColumn>
			
	</g:HTMLPanel>

</ui:UiBinder>