<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:m="urn:import:gwt.material.design.client.ui">

	<m:MaterialCard ui:field="root" backgroundColor="BLUE_GREY_DARKEN_2">
		<m:MaterialCardContent ui:field="cardContent" textColor="GREY_LIGHTEN_4" waves="LIGHT" >
			<m:MaterialCardTitle ui:field="cardTitle" iconPosition="RIGHT" addStyleNames="icon"/>
		</m:MaterialCardContent>
		<m:MaterialCardAction>
			<m:MaterialLabel ui:field="lblName" addStyleNames="total" textColor="GREY_LIGHTEN_4"/>
			<m:MaterialLabel ui:field="lblDescription" textColor="RED_LIGHTEN_5"/>
			<m:MaterialLabel ui:field="lblDetail" textColor="RED_LIGHTEN_5"/>
		</m:MaterialCardAction>
	</m:MaterialCard>

</ui:UiBinder>