<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client">

	<ui:style>
		
		.btnPlay {
		    position: absolute;
		    right: 15px;
		    width: 50px!important;
		    height: 45px!important;
		    bottom: 15px;
		    line-height: 45px;
		    text-align: center !important;
		    padding: 0px !important;
		}
		.icon {
			position: absolute;
		    left: 15px;
		    opacity: 0.25;
		    bottom: 15px;
		}
	</ui:style>

	<g:HTMLPanel ui:field="root">
		<m:MaterialColumn grid="l3 m3 s6">
				<m:MaterialCard addStyleNames="scene" backgroundColor="BLUE_GREY_DARKEN_2">
					<m:MaterialCardContent textColor="YELLOW_LIGHTEN_5">
						<m:MaterialRow marginBottom="0">
							<m:MaterialIcon ui:field="icon" addStyleNames="{style.icon}" iconType="MOVIE" circle="true" iconSize="MEDIUM"/>
							<m:MaterialLabel ui:field="lblName" addStyleNames="name" text="-" marginTop="3" fontSize="1.2em"/>
							<m:MaterialLabel ui:field="lblZone" addStyleNames="zone" text="-" marginTop="5" textColor="GREY_LIGHTEN_2"/>
							<m:MaterialLabel ui:field="lblTime" addStyleNames="time" text="-" textColor="GREY_LIGHTEN_1"/>
							<m:MaterialIcon ui:field="btnPlay" addStyleNames="{style.btnPlay}" waves="LIGHT" iconType="PLAY_ARROW" circle="true" iconSize="MEDIUM"/>
						</m:MaterialRow>
					</m:MaterialCardContent>
				</m:MaterialCard>
			</m:MaterialColumn>
	</g:HTMLPanel>

</ui:UiBinder>