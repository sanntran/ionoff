<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client">

	<ui:style>
		
		.devices {
		    height: 50px;
		    line-height: 50px;
		    position: absolute;
		    bottom: 5px;
		    right: 10px;
		}
		
		.icon {
			position: absolute;
		    left: 12px;
		    opacity: .5;
		    bottom: 15px;
		    font-size: 3rem !important;
		}
	</ui:style>

	<g:HTMLPanel ui:field="root">
		<m:MaterialColumn grid="l3 m3 s6">
				<m:MaterialCard addStyleNames="zone" backgroundColor="BLUE_GREY_DARKEN_2">
					<m:MaterialCardContent textColor="YELLOW_LIGHTEN_5">
						<m:MaterialRow marginBottom="0">
							<m:MaterialPanel ui:field="zoneCard" grid="s9"  waves="LIGHT">
								<m:MaterialLabel ui:field="lblName" addStyleNames="name" text="-" marginTop="3" fontSize="1.2em"/>
								<m:MaterialLabel ui:field="lblArea" addStyleNames="area" text="-" marginTop="5" textColor="GREY_LIGHTEN_2"/>
							</m:MaterialPanel>
							<m:MaterialIcon ui:field="icon" addStyleNames="{style.icon} icon" iconType="CROP_3_2" circle="true" iconSize="MEDIUM"/>
							<m:MaterialLink ui:field="lblDevices" waves="LIGHT" addStyleNames="{style.devices} devices" text="-" textColor="GREY_LIGHTEN_5" iconType="CHEVRON_RIGHT"/>
						</m:MaterialRow>
					</m:MaterialCardContent>
				</m:MaterialCard>
			</m:MaterialColumn>
	</g:HTMLPanel>

</ui:UiBinder>