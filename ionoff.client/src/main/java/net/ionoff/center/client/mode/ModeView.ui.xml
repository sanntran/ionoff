<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client">

	<ui:style>
		.icon {
			position: absolute;
		    right: 20px;
		    opacity: 0.25;
		}
		.btnSwitch {
			position: absolute;
		   
		}
	</ui:style>
	
	<g:HTMLPanel ui:field="root">
		<m:MaterialColumn grid="l3 m3 s6">
				<m:MaterialCard addStyleNames="mode" backgroundColor="BLUE_GREY_DARKEN_2">
					<m:MaterialCardContent textColor="YELLOW_LIGHTEN_5">
						<m:MaterialRow marginBottom="0">
							<m:MaterialIcon ui:field="icon" addStyleNames="{style.icon}" iconType="SETTINGS_BRIGHTNESS" circle="true" iconSize="MEDIUM"/>
							<m:MaterialLabel ui:field="lblName" addStyleNames="name" text="-" marginTop="3" fontSize="1.2em"/>
							<m:MaterialLabel ui:field="lblTime" addStyleNames="time" text="-" textColor="GREY_LIGHTEN_1"/>
							<m:MaterialSwitch ui:field="btnSwitch" value="false" float="RIGHT" addStyleNames="{style.btnSwitch} switch"/>
						</m:MaterialRow>
					</m:MaterialCardContent>
				</m:MaterialCard>
			</m:MaterialColumn>
	</g:HTMLPanel>

</ui:UiBinder>